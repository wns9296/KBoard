<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lec.spring.repository.AttachmentRepository">
    <insert id="insert" flushCache="true" parameterType="arraylist">
        INSERT INTO t5_attachment (sourcename, filename, post_id)
        VALUES
        <foreach collection="list" item="e" separator=",">
            (#{e.sourcename}, #{e.filename}, #{param2})
        </foreach>
    </insert>

    <insert id="save" parameterType="com.lec.spring.domain.Attachment" flushCache="true">
        INSERT INTO t5_attachment (sourcename, filename, post_id)
        VALUES (#{sourcename}, #{filename}, #{post_id})
    </insert>

    <sql id="SELECTFILE">
        SELECT id, sourcename, filename, post_id
        FROM t5_attachment
        WHERE 1 = 1
    </sql>

    <select id="findByPost" resultType="com.lec.spring.domain.Attachment">
        <include refid="SELECTFILE"/>
        AND post_id = #{param1}
        ORDER BY id ASC
    </select>

    <select id="findById" resultType="com.lec.spring.domain.Attachment">
        <include refid="SELECTFILE"/>
        AND id = #{id}
        ORDER BY id ASC
    </select>

    <select id="findByIds" resultType="com.lec.spring.domain.Attachment" parameterType="arraylist">
        <include refid="SELECTFILE"/>
        AND id IN
        <foreach collection="ids" item="e" separator="," open="(" close=")">
            #{e}
        </foreach>
        ORDER BY id ASC
    </select>

    <delete id="deleteByIds" flushCache="true" parameterType="arraylist">
        DELETE FROM t5_attachment
        WHERE id IN
        (<foreach collection="ids" item="e" separator=",">
        #{e}
    </foreach>)
    </delete>

    <delete id="delete" flushCache="true">
        DELETE
        FROM t5_attachment
        WHERE id = #{id}
    </delete>

</mapper>